<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">
<suite name="Suite" thread-count="1" verbose="1" parallel="tests">
<listeners>
		<listener class-name="com.loadstop.qa.utility.CustomReporterListener"/>	
 </listeners> 
 <!-- Put IP of localhost/Grid Hub machine -->
	<parameter name="selenium.host" value="192.168.43.176"/>

	<!-- Put Port of localhost RC/Grid Hub machine -->
	<parameter name="selenium.port" value="4444" />

	<!-- Put target browser name as below: 1) Firefox : firefox 2) chrome : 
		chrome 3) IExplorer : ie8 / ie9 -->
	<parameter name="selenium.browser" value="chrome" />
  <parameter name="selenium.url" value="https://loadstopwebdev.azurewebsites.net/App/SplitLoads"/>
  <test  name="Verify Dispatch Load  functionality">
    <classes>
      <class name="com.loadstop.qa.testcases.dispatchload.DispatchLoadTest"/>
    </classes>
  </test> <!-- Test -->
 
  <test  name="Verify Dispatch Edit Load  functionality">
    <classes>
      <class name="com.loadstop.qa.testcases.dispatchload.EditDispatchLoad"/>
    </classes>
  </test> <!-- Test -->
  
  <test  name="Verify Broker Load  functionality">
    <classes>
      <class name="com.loadstop.qa.testcases.dispatchload.BrokerLoadTest"/>
    </classes>
  </test> <!-- Test -->
</suite> <!-- Suite -->
